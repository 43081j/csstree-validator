{
  "name": "csstree-validator",
  "version": "1.0.8",
  "description": "CSS validator build on csstree",
  "keywords": [
    "css",
    "syntax",
    "validator",
    "checker"
  ],
  "homepage": "https://github.com/csstree/validator",
  "author": "Roman Dvornov <rdvornov@gmail.com>",
  "license": "MIT",
  "repository": "csstree/validator",
  "bugs": {
    "url": "https://github.com/csstree/validator/issues"
  },
  "bin": {
    "csstree-validator": "./bin/validate"
  },
  "main": "./lib/index",
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "no-duplicate-case": 2,
      "no-undef": 2,
      "no-unused-vars": [
        2,
        {
          "vars": "all",
          "args": "after-used"
        }
      ]
    }
  },
  "scripts": {
    "codestyle-and-test": "npm run codestyle && npm test",
    "codestyle": "jscs lib && eslint lib",
    "test": "mocha --reporter dot",
    "travis": "npm run codestyle-and-test"
  },
  "dependencies": {
    "clap": "^1.1.1",
    "css-tree": "1.0.0-alpha20"
  },
  "devDependencies": {
    "eslint": "^2.13.1",
    "jscs": "^3.0.7",
    "mocha": "^3.2.0"
  },
  "engines": {
    "node": ">=0.10.0"
  }
}
